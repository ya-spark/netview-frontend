# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/netview
PGDATABASE=netview
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-service-account-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PAID_PRICE_ID=price_your_paid_plan_price_id
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_plan_price_id

# Anthropic AI Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# Application Configuration
NODE_ENV=development
PORT=5000

# Contact Information
CONTACT_EMAIL=contact@yaseenmd.com
LINKEDIN_URL=https://linkedin.com/in/yaseenmd

# Frontend Environment Variables (prefix with VITE_)
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_API_KEY=your-firebase-web-api-key
VITE_FIREBASE_APP_ID=your-firebase-app-id
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
VITE_CONTACT_EMAIL=contact@yaseenmd.com

# Gateway Configuration
GATEWAY_ID=auto-generated-uuid
GATEWAY_TYPE=Custom
GATEWAY_NAME=Custom Gateway
GATEWAY_LOCATION=Unknown
BACKEND_URL=http://localhost:5000
GATEWAY_API_KEY=your-gateway-api-key

# Gateway Server Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8001
GATEWAY_DEBUG=false

# Gateway Timing Configuration
SYNC_INTERVAL=10
PROBE_CHECK_INTERVAL=60
HEARTBEAT_INTERVAL=30

# Gateway Probe Configuration
DEFAULT_TIMEOUT=30
MAX_CONCURRENT_PROBES=10
USER_AGENT=NetView-Gateway/1.0

# Gateway Storage Configuration
LOCAL_STORAGE_PATH=./data
MAX_LOCAL_RESULTS=1000

# Gateway Browser Configuration (for Browser probes)
CHROME_EXECUTABLE_PATH=/usr/bin/google-chrome
HEADLESS_BROWSER=true
BROWSER_SUPPORT=false

# Gateway SSL/TLS Configuration
VERIFY_SSL=true
SSL_CERT_PATH=
SSL_KEY_PATH=

# Gateway Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# Production Deployment Configuration
# Set these for production deployment on Hostinger or other providers
PRODUCTION_DOMAIN=your-domain.com
REPLIT_DOMAINS=your-domain.com,your-subdomain.your-domain.com

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://your-domain.com
CORS_ENABLED=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# SMS Configuration (for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-validation

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=./uploads

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
